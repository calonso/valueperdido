<li>
  <%= link_to bet[1], event_bet_path(:event_id => @event, :id => bet[0])  %>
  | Votes: <%= bet[2] %>
  <% if @event.active? %>
  | <% if bet[3] == 1 %>
      <%= link_to "Unvote", unvote_path(:event_id => @event, :id => bet[0]) %>
    <% else %>
      <%= link_to "Vote", vote_path(:event_id => @event, :id => bet[0]) %>
    <% end %>
  <% else %>
    <% if current_user.admin? %>
        | <%= link_to "Edit", edit_event_bet_path(:event_id => @event, :id => bet[0]) %>
    <% end %>
    <% if bet [4] == 1 %>
      | Selected
    <% end %>
  <% end %>
</li>