<li>
  <%= link_to "#{user.surname}, #{user.name}", user %> |
  <% if user.validated %>
    <%= link_to "#{t :invalidate}", admin_invalidate_path(:id => user.id) %>
  <% else %>
    <%= link_to "#{t :validate}", admin_validate_path(:id => user.id) %>
  <% end %>
  | <%= link_to "#{t :delete}", admin_user_path(user), :method => :delete,
                                      :confirm => "#{t :delete_confirm}",
                                      :title => "#{t :delete} #{user.name}" %>
</li>