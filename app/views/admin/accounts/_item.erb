<tr>
    <td><%= item["date"] %></td>
    <td><%= item["amount"] %></td>
    <td><%= total %></td>
    <td>
    <% if item["type"] == "payment" %>
        Payment: <%= link_to item["name"], user_path(:id => item["id"]) %>
    <% else %>
        Bet of: <%= link_to item["name"], event_bets_path(:event_id => item["id"]) %>
    <% end %>
    </td>
</tr>