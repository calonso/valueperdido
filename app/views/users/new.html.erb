<h1>New user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'users/form', :f => f %>
  <div class="field">
    <%= f.label :terms, "I accept the " %> <%= link_to "Terms and Conditions", terms_path %>
    <%= f.check_box :terms %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>