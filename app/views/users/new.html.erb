<h1><%= t :new_user %></h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'users/form', :f => f %>
  <div class="field">
    <%= f.label :terms, "#{t :accept_terms} " %> <%= link_to "#{t :terms_and_conds}", terms_path %>
    <%= f.check_box :terms %>
  </div>
  <div class="actions">
    <%= f.submit "#{t :submit}" %>
  </div>
<% end %>