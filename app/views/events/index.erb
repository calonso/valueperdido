<h1><%= t :events_index %></h1>

<% if @running_events.any? %>
    <h2><%= t :running_events %></h2>
    <ul>
      <%= render @running_events %>
    </ul>
<% end %>
<% if @closing_events.any? %>
    <h2><%= t :closing_events %></h2>
    <ul>
      <%= render @closing_events %>
    </ul>
<% end %>
<% if @events.any? %>
    <h2><%= t :events_index %></h2>
    <%= will_paginate %>
    <ul>
      <%= render @events %>
    </ul>
    <%= will_paginate %>
<% elsif @closing_events.empty? %>
    <p><%= t :no_events_index %></p>
<% end %>

<% if current_user.admin? %>
    <%= link_to "#{t :new_event}", new_event_path %>
<% end %>
